# ============================================================================
# fonPick Environment Configuration
# ============================================================================
# Copy this file to .env.local and configure your values
# NEVER commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Firebase Configuration
# ----------------------------------------------------------------------------
# Get these values from: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app > Config

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (for server-side)
FIREBASE_CLIENT_EMAIL=service-account@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Optional: Firebase App Measurement (Analytics)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ----------------------------------------------------------------------------
# External APIs
# ----------------------------------------------------------------------------

# Stock API Configuration
# External API for fetching Thai stock market data
NEXT_PUBLIC_STOCK_API_BASE_URL=https://my-fon-stock-api.vercel.app

# Yahoo Finance API (optional proxy configuration)
YAHOO_FINANCE_API_URL=
YAHOO_FINANCE_API_KEY=

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

# Environment (development, production, test)
NODE_ENV=development

# App URL (for callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default locale (en, th)
NEXT_PUBLIC_DEFAULT_LOCALE=th

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable features

# Volume Analysis Module
# Currently disabled due to RTDB data issues
NEXT_PUBLIC_ENABLE_VOLUME_ANALYSIS_MODULE=false

# Volatility Module
# Currently disabled due to missing breadth data
NEXT_PUBLIC_ENABLE_VOLATILITY_MODULE=false

# Planned Features (not yet implemented)
NEXT_PUBLIC_FEATURE_HISTORICAL_DATA=false
NEXT_PUBLIC_FEATURE_WEBSOCKET=false
NEXT_PUBLIC_FEATURE_AUTHENTICATION=false
NEXT_PUBLIC_FEATURE_WATCHLISTS=false

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------

# Cache TTL in seconds
CACHE_TTL_STANDARD=60
CACHE_TTL_LONG=300
CACHE_TTL_HEALTH=0

# SWR (Stale While Revalidate) settings
SWR_REFRESH_INTERVAL=120
SWR_DEDUPLICATION_INTERVAL=2000

# ----------------------------------------------------------------------------
# Analytics & Monitoring
# ----------------------------------------------------------------------------

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=

# Sentry DSN (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------------------------------------
# API Rate Limiting
# ----------------------------------------------------------------------------

# Requests per minute per IP
API_RATE_LIMIT=60

# API timeout in milliseconds
API_TIMEOUT=30000

# ----------------------------------------------------------------------------
# Development Only
# ----------------------------------------------------------------------------

# Enable debug mode (additional logging)
DEBUG=false

# Enable Vitest UI
VITEST_UI=true

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
#
# 1. Required variables for production:
#    - All NEXT_PUBLIC_FIREBASE_* variables
#    - NEXT_PUBLIC_APP_URL
#
# 2. Optional variables:
#    - YAHOO_FINANCE_* (if using proxy)
#    - NEXT_PUBLIC_GA_ID (analytics)
#    - NEXT_PUBLIC_SENTRY_DSN (error tracking)
#
# 3. Feature flags:
#    - Set to true to enable features in development
#    - Set to false to disable features
#
# 4. Security:
#    - NEVER commit .env.local to version control
#    - Use .env.example as template
#    - Rotate secrets regularly
#    - Use different values for development/production
#
# ============================================================================
