/* Additional CSS keyframes for module animations */

/* Gauge fill animation - replaces Framer Motion for static gauges */
@keyframes gauge-fill {
  from {
    stroke-dashoffset: var(--gauge-circumference);
  }
  to {
    stroke-dashoffset: var(--gauge-offset);
  }
}

.gauge-animate {
  animation: gauge-fill 0.6s ease-out forwards;
}

/* Bar fill animation - replaces Framer Motion for progress bars */
@keyframes bar-fill {
  from {
    width: 0;
  }
  to {
    width: var(--bar-width);
  }
}

.bar-animate {
  animation: bar-fill 0.6s ease-out forwards;
}

/* Fade in animation */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fade-in {
  animation: fade-in 0.3s ease-out forwards;
}

/* Slide in from left */
@keyframes slide-in-left {
  from {
    opacity: 0;
    transform: translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.slide-in-left {
  animation: slide-in-left 0.3s ease-out forwards;
}

/* Slide in from right */
@keyframes slide-in-right {
  from {
    opacity: 0;
    transform: translateX(10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.slide-in-right {
  animation: slide-in-right 0.3s ease-out forwards;
}

/* Rotate animation for chevron */
@keyframes rotate-chevron {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(90deg);
  }
}

.rotate-chevron {
  animation: rotate-chevron 0.2s ease-out forwards;
}
